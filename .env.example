# バーコード管理アプリ設定ファイル
# このファイルを .env にコピーして使用してください

# アプリケーション設定
SECRET_KEY=your-secret-key-here-change-this
DEBUG=False

# サーバー設定
HOST=0.0.0.0
PORT=5000

# データベース設定
DATABASE_PATH=data/app.db

# NAS バックアップ設定（SMB/CIFS）
NAS_HOST=10.77.233.97
NAS_SHARE=share
NAS_MOUNT_POINT=/mnt/nas_backup
NAS_REQUIRED=True
NAS_BACKUP_FOLDER=barcode_app_backups

# NAS認証（匿名アクセスの場合は空欄）
NAS_USERNAME=
NAS_PASSWORD=

# USB バックアップ設定（レガシー、NAS優先）
# USB_UUID=your-usb-uuid-here
# USB_MOUNT_POINT=/media/usb_backup
USB_REQUIRED=False

# バックアップ設定
BACKUP_TIME=02:00
BACKUP_RETENTION_DAYS=365

# 返却期限設定（日数）
DEFAULT_RETURN_DAYS=14

# ログ設定
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5
