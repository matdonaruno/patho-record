# バーコード管理アプリ設定ファイル
# このファイルを .env にコピーして使用してください

# アプリケーション設定
SECRET_KEY=your-secret-key-here-change-this
DEBUG=True

# データベース設定
DATABASE_PATH=data/app.db

# USB バックアップ設定
# Ubuntu: /dev/disk/by-uuid/ で確認
# Mac: diskutil info /Volumes/YOUR_USB | grep "Volume UUID"
USB_UUID=your-usb-uuid-here
USB_MOUNT_POINT=/media/usb_backup
USB_REQUIRED=True

# バックアップ設定
BACKUP_TIME=02:00
BACKUP_RETENTION_DAYS=30

# 返却期限設定（日数）
DEFAULT_RETURN_DAYS=14

# ログ設定
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5
